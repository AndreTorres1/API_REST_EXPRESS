{
  "swagger": "2.0",

  "info": {
    "title": "Recipes API",
    "description": "This API allows for users to retrieve and update recipes information.",
    "version": "1.0"
  },

  "schemes": [
    "http"
  ],

  "parameters": {
    "recipeNameInPath": {
      "name": "recipeName",
      "in": "path",
      "description": "The name of the recipe",
      "required": true,
      "schema": {
        "type": "string"
      },
      "default": "Roasted Asparagus"
    },


    "email": {
      "name": "email",
      "description": "email para autenticação",
      "required": true,
      "in": "header",
      "default": "admin@admin"
    },
    "password": {
      "name": "password",
      "description": "password para autenticação",
      "required": true,
      "in": "header",
      "default": "12456"
    }
  },

  "paths": {
    "/version": {
      "get": {
        "description": "Retrieves the current version of the API",
        "responses": {
          "200": {
            "description": "This endpoint always returns with success"
          }
        }
      }
    },

    "/recipes": {
      "get": {
        "description": "Retrieves all the available recipes",
        "responses": {
          "200": {
            "description": "This endpoint always returns with success"
          }
        }
      }
    },

    "/recipes/{recipeName}": {
      "get": {
        "description": "Retrieves a recipe by its name",
        "parameters": [
          {
            "$ref": "#/parameters/recipeNameInPath"
          }
        ],
        "responses": {
          "200": {
            "description": "If the recipe exists"
          },
          "404": {
            "description": "If there is no recipe with the given name"
          }
        }
      }
    },

    "/recipes/{recipeName}/ingredients": {
      "get": {
        "description": "Retrieves the ingredients of a recipe",
        "parameters": [
          {
            "$ref": "#/parameters/recipeNameInPath"
          }
        ],
        "responses": {
          "200": {
            "description": "If the recipe exists, it retrieves its ingredients"
          },
          "404": {
            "description": "If there is no recipe with the given name"
          }
        }
      }
    },

    "/recipes/{recipeName}/ingredients/condiments": {
      "get": {
        "description": "Retrieves the ingredients of a recipe",
        "parameters": [
          {
            "$ref": "#/parameters/recipeNameInPath"
          }
        ],
        "responses": {
          "200": {
            "description": "If the recipe exists, it retrieves its condiments"
          },
          "404": {
            "description": "If there is no recipe with the given name"
          }
        }
      }
    },





    "/api/version": {
      "get": {
        "description": "Obtem a versão atual da API",
        "responses": {
          "200": {
            "description": "Este endpoint retorna sempre com successo"
          }
        }
      }
    },

    "/api/users": {
      "get": {
        "description": "Obtem uma lista de utilizadores",
        "parameters": [
          {
            "$ref": "#/parameters/email"
          },
          {
            "$ref": "#/parameters/password"
          }
        ],
        "responses": {
          "200": {
            "description": "Este endpoint retorna a lista de users por defeito"
          }
        }
      },
      "post": {
        "description": "Permite inserir um novo utilizador",
        "parameters": [
          {
            "$ref": "#/parameters/email"
          },
          {
            "$ref": "#/parameters/password"
          },
          {
            "name": "user-details",
            "description": "Detalhes do novo utilizador",
            "in": "body",
            "schema": {
              "type": "object",
              "required": [
                "email",
                "password",
                "name"
              ],
              "properties": {
                "email": {
                  "type": "string",
                  "description": "Email do novo utilizador",
                  "default": "test@mail.com"
                },
                "password": {
                  "type": "string",
                  "format": "password",
                  "description": "Password do novo utilizador",
                  "default": "123456"
                },
                "name": {
                  "type": "string",
                  "description": "Nome do novo utilizador",
                  "default": "Test"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Se for possível inserir o utilizador"
          },
          "400": {
            "description": "Se o utilizador já existir"
          }
        }
      }
    },

    "/api/admins": {
      "get": {
        "description": "Obtem uma lista de admins",
        "parameters": [{
          "$ref": "#/parameters/email"
        },{
          "$ref": "#/parameters/password"
        }],
        "responses": {
          "200": {
            "description": "Este endpoint retorna a lista de admins por defeito"
          }
        }
      }
    }
  }
}